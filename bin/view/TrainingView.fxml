<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.TrainingController">
   <left>
      <FlowPane onDragDetected="#goHome" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #808080;" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="130.0" fitWidth="180.0" pickOnBounds="true" preserveRatio="true">
               <FlowPane.margin>
                  <Insets bottom="20.0" left="10.0" top="20.0" />
               </FlowPane.margin>
            </ImageView>
            <Button mnemonicParsing="false" onAction="#goHome" prefHeight="40.0" prefWidth="160.0" style="-fx-background-radius: 20; -fx-background-color: black;" text="Home" textFill="WHITE">
               <FlowPane.margin>
                  <Insets left="20.0" top="20.0" />
               </FlowPane.margin>
               <font>
                  <Font name="Arial" size="14.0" />
               </font></Button>
            <Button mnemonicParsing="false" onAction="#goTraining" prefHeight="40.0" prefWidth="160.0" style="-fx-background-radius: 20; -fx-background-color: white;" text="Training">
               <FlowPane.margin>
                  <Insets left="20.0" top="20.0" />
               </FlowPane.margin>
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#goEmployees" prefHeight="40.0" prefWidth="160.0" style="-fx-background-radius: 20; -fx-background-color: black;" text="Employees" textFill="WHITE">
               <FlowPane.margin>
                  <Insets left="20.0" top="20.0" />
               </FlowPane.margin>
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#goStatistic" prefHeight="40.0" prefWidth="160.0" style="-fx-background-radius: 20; -fx-background-color: black;" text="Statistic" textFill="#fcfcfc">
               <FlowPane.margin>
                  <Insets left="20.0" top="20.0" />
               </FlowPane.margin>
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#goOptions" prefHeight="40.0" prefWidth="160.0" style="-fx-background-radius: 20; -fx-background-color: black;" text="Options" textFill="#fcfcfc">
               <FlowPane.margin>
                  <Insets left="20.0" top="20.0" />
               </FlowPane.margin>
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Button>
         </children></FlowPane>
   </left>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <TableView fx:id="tableView" prefHeight="292.0" prefWidth="600.0">
              <columns>
                <TableColumn fx:id="trainingId" prefWidth="75.0" text="Trainingid" />
                  <TableColumn fx:id="trainingNaam" prefWidth="75.0" text="TrainingNaam" />
                  <TableColumn fx:id="adres" prefWidth="75.0" text="Adres" />
                  <TableColumn fx:id="leerkracht" prefWidth="75.0" text="Leerkracht" />
                  <TableColumn fx:id="personeel" prefWidth="75.0" text="Personeel" />
                  <TableColumn fx:id="datum" prefWidth="75.0" text="datum" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <Label text="Select Training for more options">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin></Label>
            <Button mnemonicParsing="false" onAction="#addStage" prefHeight="40.0" prefWidth="140.0" style="-fx-background-radius: 20; -fx-background-color: #808080;" text="Add Training" textFill="#fcfcfc">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
               <VBox.margin>
                  <Insets left="5.0" top="20.0" />
               </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" prefHeight="40.0" prefWidth="140.0" style="-fx-background-radius: 20; -fx-background-color: #808080;" text="More info" textFill="#fcfcfc">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" left="160.0" top="-40.0" />
               </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#UpdateTraining" prefHeight="40.0" prefWidth="140.0" style="-fx-background-radius: 20; -fx-background-color: #808080;" text="Modify training" textFill="#fcfcfc">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
               <VBox.margin>
                  <Insets left="5.0" />
               </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" prefHeight="40.0" prefWidth="140.0" style="-fx-background-radius: 20; -fx-background-color: #808080;" text="Delete training" textFill="#fcfcfc">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
               <VBox.margin>
                  <Insets left="160.0" top="-40.0" />
               </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" prefHeight="40.0" prefWidth="140.0" style="-fx-background-radius: 20; -fx-background-color: #808080;" text="Delete training" textFill="#fcfcfc">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
               <VBox.margin>
                  <Insets left="80.0" top="20.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
